{
  "name": "pacoorozco/gamify-l5",
  "description": "Gamification platform that implements a serious game mechanic. This is the core of GoW!",
  "keywords": [
    "gamification",
    "GoW",
    "gamify",
    "game platform",
    "serious games",
    "laravel"
  ],
  "homepage": "https://github.com/pacoorozco/gamify-l5",
  "license": "GPL-2.0",
  "type": "project",
  "authors": [
    {
      "name": "Paco Orozco",
      "email": "paco@pacorozco.info",
      "homepage": "https://pacoorozco.info",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/pacoorozco/gamify-l5/issues"
  },
  "require": {
    "php": ">=5.5.9",
    "laravel/framework": "5.1.*",
    "codesleeve/laravel-stapler": "^1.0",
    "cviebrock/eloquent-sluggable": "^3.1"
  },
  "require-dev": {
    "fzaninotto/faker": "~1.4",
    "mockery/mockery": "0.9.*",
    "phpunit/phpunit": "~4.0",
    "phpspec/phpspec": "~2.1",
    "laravel/homestead": "^2.1"
  },
  "autoload": {
    "classmap": [
      "database"
    ],
    "psr-4": {
      "Gamify\\": "app/"
    }
  },
  "autoload-dev": {
    "classmap": [
      "tests/TestCase.php"
    ]
  },
  "scripts": {
    "post-install-cmd": [
      "php artisan clear-compiled",
      "php artisan optimize"
    ],
    "pre-update-cmd": [
      "php artisan clear-compiled"
    ],
    "post-update-cmd": [
      "php artisan optimize"
    ],
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "php artisan key:generate"
    ]
  },
  "config": {
    "preferred-install": "dist"
  }
}
